<UserControl x:Class="OneCode.View.OneCodeWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OneCode"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <UserControl.Resources>
        <local:VariableCollectionViewModel x:Key="vcvm">
        </local:VariableCollectionViewModel>
    </UserControl.Resources>
    <DockPanel>
        <Button DockPanel.Dock="Top"  x:Name="btnFindVariables" Height="20" Content="Variablen finden" Command="{Binding findVariablesInDocClick, Mode=OneWay, Source={StaticResource vcvm}}" Width="150" HorizontalAlignment="Left" />
        <ListBox DockPanel.Dock="Top" x:Name="lbVariables" ItemsSource="{Binding Source={StaticResource vcvm}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Text}"/>
                        <TextBlock Text="{Binding Path=Kind}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
